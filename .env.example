# 机器人基础配置
BOT_NAME=示例机器人
BOT_VERSION=1.0.0
BOT_ENVIRONMENT=development

# 适配器配置
QQ_APP_ID=your_qq_app_id
QQ_TOKEN=your_qq_token
TELEGRAM_TOKEN=your_telegram_token
DISCORD_TOKEN=your_discord_token

# 数据库配置
DATABASE_TYPE=redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# MySQL配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=bot_user
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=bot_db

# PostgreSQL配置
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=bot_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DATABASE=bot_db

# MongoDB配置
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=bot_db

# 安全配置
ENCRYPTION_KEY=your_32_character_encryption_key
JWT_SECRET=your_jwt_secret_key

# 日志配置
LOG_LEVEL=info
LOG_FILE_PATH=./logs/bot.log
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10

# 性能配置
MAX_CONCURRENT_TASKS=50
TASK_TIMEOUT=60000
MEMORY_LIMIT=2GB
CPU_LIMIT=90

# 监控配置
MONITORING_ENABLED=true
METRICS_INTERVAL=30000
HEALTH_CHECK_INTERVAL=15000

# 插件配置
PLUGINS_DIRECTORY=./plugins
PLUGINS_AUTO_LOAD=true
PLUGINS_HOT_RELOAD=false

# API配置
API_PORT=3000
API_HOST=localhost
API_CORS_ORIGINS=https://admin.example.com

# 第三方服务配置
WEBHOOK_URL=https://your-webhook-url.com
EMAIL_SERVICE_API_KEY=your_email_api_key
SMS_SERVICE_API_KEY=your_sms_api_key